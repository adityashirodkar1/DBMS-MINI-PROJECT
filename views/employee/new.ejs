    <% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Add Employee Details</h1>
        <div class="col-6 offset-3">
            <form action="/employees" method="post">
                <label class="form-label" for="name">Enter name:</label>
                <input class="form-control" type="text" name="name" id="name" placeholder="Employee Name"><br>
                <label class="form-label" for="dob">Enter date of birth:</label>
                <input class="form-control" type="date" id="dob" name="dob" placeholder="D.O.B."><br>
                <label class="form-label" for="">Department Code</label>
                <input class="form-control" type="Number" name="depCode" value="<%=code%>"><br>
                <label class="form-label" for="email">Enter email:</label>
                <input class="form-control" type="email" id="email" name="email" placeholder="Email ID"><br>
                <label class="form-label" for="position">Select position:</label>
                <select name="position" id="position">
                    <%for (let post of department.consists){%>
                        <option class="form-control" value="<%=post%> "><%=post%></option>
                    <%}%>
                </select>
                <br>
                <label class="form-label" for="address">Enter address:</label>
                <input class="form-control" type="text" name="address" id="address" placeholder="Address"><br>
                <div>
                    <label class="form-label" for="salary">Enter salary:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="salary">&#8377</span>
                        <input class="form-control" type="Number" name="salary" id="salary" placeholder="0.00" aria-describedby="salary-label">
                    </div>
                </div>
                <br><br>
                <button class="btn btn-success">Add</button>
            </form>
        </div>
    </div>